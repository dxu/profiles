{
	"manifest_version": 2,
	
	"name": "Profile Manager Chrome Extension",
	"description": "Tracks trends in your online app usage.",
	"version": "1.0",

	"background": {
		"scripts": ["jquery-1.9.1.min.js", "purl.js", "background.js"]
	},

	"permissions": [
		"tabs",
		"storage",
		"http://127.0.0.1:3000/*"
	],
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	}
}
