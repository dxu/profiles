{
	"manifest_version": 2,
	
	"name": "Profile Manager Chrome Extension",
	"description": "Tracks trends in your online app usage.",
	"version": "1.0.1",

	"background": {
		"scripts": ["jquery-1.9.1.min.js", "purl.js", "background.js"]
	},

	"permissions": [
		"tabs",
		"storage",
		"management",
		"http://localhost:3000/*",
		"http://127.0.0.1:3000/*",
        "http://davidxu.me/*"
	],

	"browser_action": {
		"default_icon": {
			"19": "red.png"
		},
		"default_popup": "popup.html"
	}
}
